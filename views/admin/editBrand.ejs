<%- include('../layouts/adminHeader.ejs') %>

<form action="/admin/updateBrand" method="post" enctype="multipart/form-data">

        <section class="content-main">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Edit Brand</h2>
                        
   

                    </div>
                </div>
                <div class="col-lg-6">
                  
                    <div class="card mb-4">
                       
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <input type="hidden" name="brand_id" value="<%= brand && brand._id %>" >
                        <div class="card-body">
                            <div class="mb-4">
                                <label for="product_name" class="form-label">Brand Title</label>
                                <input type="text"  name="name" placeholder="Type here" value="<%= brand && brand.name %>" class="form-control" id="brand_name">
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Full description</label>
                                <textarea  name="description" placeholder="Type here" class="form-control" rows="4"><%= brand && brand.description %></textarea>
                            </div>
                        </div>
                        
                    </div> <!-- card end// -->
                    
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Picture</h4>
                            </div>
                            <div class="card-body">
                                <div class="input-upload">
                                    <% if (brand && brand.image) { %>
                                        <img src="/assets/imgs/category/<%= brand.image %>" alt="">
                                    <% } else { %>
                                        <!-- Provide a default image or placeholder if brand or image is not available -->
                                        <img src="/assets/imgs/default-image.jpg" alt="Default Image">
                                    <% } %>
                                    <input class="form-control" value="<%= brand && brand.image %>" type="file" name="image" >
                                </div>
                            </div>
                        </div>
                         <!-- card end// -->
                    
                    <div>
                  
                        <input type="submit"  value="submit" class="btn btn-md rounded font-sm hover-up" >
                    </div>
                
                    <div id="invalid">
                        <% if (typeof error !== 'undefined' && error) { %>
                            <p style="color: rgb(144, 5, 5);" id="message"><%= error %></p>
                        <% } %>
                                </div>  
                    </div> 
                    <div id="invalid">
                        <% if (typeof message !== 'undefined' && message) { %>
                            <p style="color: rgb(8, 96, 0);" id="message"><%= message %></p>
                        <% } %>
                                </div> 
                 
                </div> 
                </div>
          

      
        </section> <!-- content-main end// -->
    </form>

        
        
    <%- include('../layouts/adminFooter.ejs') %>