<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #fff; /* White background */
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .reset-container {
            text-align: center;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>

<div class="container reset-container w-25">
    <h2>Change Password</h2>
    
    <form id="changePasswordForm" action="/editPassword" method="post">
        <div class="form-group">
            <label for="oldPassword">Old Password</label>
            <input type="password" name="oldPassword" class="form-control" id="oldPassword" placeholder="Enter old password">
        </div>

        <div class="form-group">
            <label for="newPassword">New Password</label>
            <input type="password" name="newPassword" class="form-control" id="newPassword" placeholder="Enter new password">
        </div>
        
        <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" name="confirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm new password">
            <small id="passwordHelp" class="form-text text-danger"></small>
        </div>
        
        <!-- For simplicity, a button is provided as an example -->
        <button type="button" class="btn btn-primary" onclick="validateForm()">Change Password</button>
    </form>

    <script>
        function validateForm() {
            var oldPassword = document.getElementById("oldPassword").value;
            var newPassword = document.getElementById("newPassword").value;
            var confirmPassword = document.getElementById("confirmPassword").value;
            var passwordHelp = document.getElementById("passwordHelp");

            // You may add more complex validation rules as needed

            if (oldPassword.length === 0) {
                passwordHelp.innerText = "Please enter the old password";
                return;
            }

            if (newPassword.length < 8) {
                passwordHelp.innerText = "New password must be at least 8 characters long";
                return;
            }

            if (newPassword !== confirmPassword) {
                passwordHelp.innerText = "Passwords do not match";
                return;
            }

            // If the validation passes, you can submit the form or perform other actions here
            document.getElementById("changePasswordForm").submit();
        }
    </script>
</div>

<!-- Include Bootstrap JS and Popper.js -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
