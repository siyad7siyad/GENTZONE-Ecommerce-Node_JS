                                                        <img src="/assets/imgs/productIMG/<%=item.product.image[0]%>"
                                                            width="40" height="40" class="img-xs" alt="Item">
                                                    </div>
                                                    <div class="info">
                                                        <%=item.product.name %>
                                                    </div>
                                                </a>
                                            </td>
                                            <td>
                                                ₹<%=item.product.discount_Price %>
                                            </td>
                                            <td>
                                                <%=item.quantity %>
                                            </td>
                                            <td class="text-end">
                                                ₹<%=order.totalAmount  %>
                                            </td>
                                        </tr>
                                        <% 
                                            }) %>
                                <tr>
                                    <td colspan="4">
                                        <article class="float-end">
                                            <dl class="dlist">
                                                <dt>Subtotal:</dt>
                                                <dd>₹<%=subtotal %></dd>
                                            </dl>
                                            <dl class="dlist">
                                                <dt>Shipping cost:</dt>
                                                <dd>₹0.00</dd>
                                            </dl>
                                            <dl class="dlist">
                                                <dt>Grand total:</dt>
                                                <dd> <b class="h5">₹<%= subtotal %></b> </dd>
                                            </dl>
                                            <dl class="dlist">
                                                <dt class="text-muted">Status:</dt>
                                                <dd>
                                                    <span class="badge rounded-pill alert-success text-success">Payment done</span>
                                                </dd>
                                            </dl>
                                        </article>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div> <!-- table-responsive// -->
                </div> 
               
              
            </div>
        </div>
    </div> 
</section> 


<script>
    async function confirmCancelOrder(orderId) {
        try {
            const result = await Swal.fire({
                title: 'Confirm Order Cancellation',
                text: 'Are you sure you want to cancel this order?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Yes, Cancel Order',
                cancelButtonText: 'Cancel',
            });

            if (result.isConfirmed) {
                const response = await fetch('/orderCancel?id=' + orderId, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                });

                const data = await response.json();

                if (data.success) {
                    // Show success message
                    await Swal.fire({
                        icon: 'success',
                        title: 'Order Cancelled Successfully!',
                        text: 'Click OK to proceed.',
                        confirmButtonText: 'OK',
                    });

                    window.location.href = '/orderSuccess';
                    // Reload the page if needed
                
                } else {
                    // Show error message
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Error occurred while cancelling the order.',
                    });
                }
            }
        } catch (error) {
            console.error('Error:', error);

            // Show error message
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Error occurred while cancelling the order. Check the console for details.',
            });
        }
    }
</script>


